{
  "extends": [
    "eslint-config-rackt",
    "plugin:ava/recommended"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "valid-jsdoc": 2,
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-no-undef": 2,
    "react/jsx-wrap-multilines": 2
  },
  "plugins": [
    "react",
    "ava"
  ]
}
